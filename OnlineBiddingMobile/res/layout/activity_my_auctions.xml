<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="onlinebidding.activities.MyAuctionsActivity" >

    <ListView
        android:id="@+id/my_auctions_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_change_shown_auctions" >
    </ListView>

    <Button
        android:id="@+id/btn_change_shown_auctions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="showAllMyAuctions"
        android:text="@string/btn_show_finished"
        android:textColor="@color/textColor" />

    <Button
        android:id="@+id/btn_add_auction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="startAddAuctionActivtiy"
        android:text="@string/btn_add_auction"
        android:textColor="@color/textColor" />

</RelativeLayout>