<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="10"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" 
    android:background="@color/black">

    <ImageView
        android:id="@+id/imgProfilePicture"
        android:layout_width="107dp"
        android:layout_height="99dp"
        android:layout_gravity="center|top"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/first_name_hint" 
        android:textColor="@color/textColor" />

    <EditText
        android:id="@+id/editTxtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" 
        android:textColor="@color/textColor">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txtSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_name_hint"
        android:textColor="@color/textColor" />

    <EditText
        android:id="@+id/editTxtSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_hint"
        android:textColor="@color/textColor" />

    <EditText
        android:id="@+id/editTxtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_hint"
		android:textColor="@color/textColor"/>

    <EditText
        android:id="@+id/editTxtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_hint"
        android:textColor="@color/textColor" />

    <EditText
        android:id="@+id/editTxtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/txtBirthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/birth_hint"
        android:textColor="@color/textColor" />

    <EditText
        android:id="@+id/editTxtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:textColor="@color/textColor"/>

     <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal" >
         
        	   <Button
        	   android:id="@+id/btnSaveChanges" 
        	   android:layout_gravity="left"
        	   android:layout_margin="10dp"
        	   android:layout_width="wrap_content"
         	   android:layout_height="wrap_content"
        	   android:text="@string/save_changes"
        	   android:textColor="@color/textColor" />
        	   
        	    <Button
        		android:id="@+id/btnMyAuctions"
                android:text="@string/my_auctions"
                android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
          		android:layout_gravity="right"
          		android:layout_margin="10dp"
        		android:textColor="@color/textColor" />
         
         
     </LinearLayout>
    

</LinearLayout>